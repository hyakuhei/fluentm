	kubectl -> "aws-cli"
	"aws-cli" -> "aws-cli"
	kubectl -> "k8s api"
	"k8s api" -> "aws-iam-authenticator"
	"aws-iam-authenticator" -> "AWS IAM"
	"aws-iam-authenticator" -> "aws-auth"
}
